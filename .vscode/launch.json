    "version": "0.2.0",
    "configurations": [
        {
            "name": "Remote Debugger: srl",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "srl",
                "port": 55678
            },
            "justMyCode": false,
            // "logToFile": true,
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/etc/opt/srlinux/cli/plugins"
                }
            ]
        }
    ]
}